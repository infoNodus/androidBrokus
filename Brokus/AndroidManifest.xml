<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brokus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.brokus.NodusActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.brokus.SplashActivity"
            android:label="@string/title_activity_splash" >
            >
        </activity>
        <activity
            android:name="com.example.brokus.BockUsActivity"
            android:label="@string/title_activity_splash" >
        </activity>
        <activity
            android:name="com.example.brokus.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.brokus.RegistroActivity"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name="com.example.brokus.PerfilActivity"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name="com.example.brokus.NuevaPublicacionActivity"
            android:label="@string/title_activity_nueva_publicacion"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.brokus.CirculoConfianzaActivity"
            android:label="@string/title_activity_circulo_confianza" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.brokus.Explorador_archivo"
            android:label="@string/title_activity_explorador_archivos" >
        </activity>
        <activity
            android:name="com.example.brokus.DetalleActivity"
            android:label="@string/title_activity_detalle" >
        </activity>
        <activity
            android:name="com.example.brokus.PerfilEmpresaActivity"
            android:label="@string/title_activity_perfil_empresa" >
        </activity>
    </application>

</manifest>
